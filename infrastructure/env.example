# =============================================================================
# Code Quest Infrastructure - Environment Variables
# =============================================================================

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_PROFILE=default
AWS_REGION=us-west-2

# =============================================================================
# Environment Configuration
# =============================================================================
ENVIRONMENT=dev
OWNER=devops-team

# =============================================================================
# Terraform Configuration
# =============================================================================
# Uncomment to use S3 backend
# TF_BACKEND_BUCKET=your-terraform-state-bucket
# TF_BACKEND_KEY=code-quest/terraform.tfstate
# TF_BACKEND_REGION=us-west-2
# TF_BACKEND_DYNAMODB_TABLE=terraform-state-lock

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=todo-app
APP_VERSION=1.0.0
APP_PORT=3000

# =============================================================================
# Database Configuration
# =============================================================================
DB_NAME=todoapp
DB_USERNAME=todoapp
DB_PASSWORD=ChangeMe123!

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=true
LOG_RETENTION_DAYS=30

# =============================================================================
# Security Configuration
# =============================================================================
ENABLE_ENCRYPTION=true
ENABLE_DELETION_PROTECTION=false

# =============================================================================
# Cost Optimization
# =============================================================================
ENABLE_SPOT_INSTANCES=true
ENABLE_CLUSTER_AUTOSCALER=true
